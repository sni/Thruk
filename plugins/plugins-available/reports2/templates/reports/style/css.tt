  text-align: center;
  font-size: 12px;
}
DIV.content {
  padding-top: 15px;
}
DIV.page.content_page TD.header DIV.title {
  height: 40px;
}
DIV.page.content_page TD.header DIV.titletext {
  font-size: 20px;
  color: white;
  bottom: 0px;
  left: 3px;
  position: absolute;
}
DIV.subtitle {
  border-bottom: 1px solid grey;
  padding-top: 20px;
  padding-bottom: 5px;
  font-size: 20px;
}


/* Cover Design */
TD.header DIV.title {
  position: relative;
  height: 200px;
  background: #6393c1;
  background: -moz-linear-gradient(45deg, #6393c1 0%, #cfe7fa 100%);
  background: -webkit-gradient(linear, left bottom, right top, color-stop(0%,#6393c1), color-stop(100%,#cfe7fa));
  background: -webkit-linear-gradient(45deg, #6393c1 0%,#cfe7fa 100%);
}
DIV.cover TD.header DIV.titletext {
  font-size: 30px;
  color: white;
  bottom: 0px;
  left: 3px;
  position: absolute;
}
DIV.cover TD.header DIV.title_bar {
  margin-top: 1px;
  background-color: #B3BEC8;
}
DIV.cover TD.header {
  border-bottom: 0;
}
DIV.cover DIV.footer {
  display: none;
}
DIV.cover DIV.content DIV.date {
  position: absolute;
  top: 300px;
  right: 45px;
  color: #595959;
  font-weight: bold;
}
DIV.cover DIV.content DIV.title {
  margin-top: 100px;
  font-size: 20px;
  font-weight: bold;
  color: #6393c1;
}
DIV.cover DIV.content DIV.details {
  margin-top: 40px;
  font-weight: bold;
}
DIV.cover DIV.content DIV.details TH {
  text-align: left;
}
DIV.cover DIV.content DIV.details TD {
  padding-left: 10px;
}
DIV.cover DIV.description {
  padding-top: 30px;
  white-space: pre;
}


/* Event Report */
TABLE.legendtable {

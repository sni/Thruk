/* page sizing */
BODY {
  margin: 0;
  border:0;
  width: 619px;
}
DIV.page {
  border: 1px solid white;
  height: 874px;
  page-break-after: always;
  position: relative;
  overflow: hidden;
}
TABLE.page {
  height: 810px;
  border-spacing: 0px;
  border-collapse: collapse;
  border: 0;
  margin: 40px;
}
DIV.content {
  overflow: hidden;
  width: 535px;
}


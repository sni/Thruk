  width: 55px;
  text-align: center;
}
TABLE.legendtable TD.img {
  text-align: center;
}
DIV.logoptions {
  font-size: 14px;
  height: 14px;
  line-height: 14px;
  overflow: hidden;
  padding-bottom: 10px;
  padding-top: 2px;
  white-space: nowrap;
}
SPAN.logtype {
  width: 220px;
  white-space: nowrap;
  float: right;
  overflow: hidden;
}
DIV.logdate IMG {
  vertical-align: bottom;
  padding-right: 5px;
}


/* SLA Report */
DIV.output {
  white-space: nowrap;
  padding-top: 2px;
  padding-bottom: 10px;
  font-size: 14px;
}
SPAN.duration {
  float: right;
}
TABLE.availability_details {
  margin-top: 30px;
  margin-left: 10px;
  border-collapse: collapse;
  font-size: 10px;
}
TABLE.availability_details.totals {
  margin-top: 15px;
}
TABLE.availability_details TD, TABLE.availability_details TH {
  border: 1px solid grey;
}
TABLE.availability_details TD {
  text-align: right;
}
TABLE.availability_details.months12 TH {
  min-width: 39px;
}
TABLE.availability_details.weeks5 TH, TABLE.availability_details.weeks4 TH {
  min-width: 50px;
}

SHELL=bash
export THRUK_CONFIG=$(shell pwd)
export TEST_AUTHOR=1
THRUK=../../../script/thruk

test:
	$(THRUK) cache clean
	$(MAKE) extra_wait_start
	for x in $$(seq 120); do \
	   if [ $$($(THRUK) -l 2>&1 | grep -c ERROR) -eq 0 ]; then break; else sleep 0.5; fi; \
	done
	$(THRUK) -l
	cd ../../.. && PERL_DL_NONLAZY=1 /usr/bin/env perl "-MExtUtils::Command::MM" "-e" "test_harness(0)" $(shell pwd)/t/*.t

test_verbose:
	$(THRUK) cache clean
	$(MAKE) extra_wait_start
	for x in $$(seq 120); do \
	   if [ $$($(THRUK) -l 2>&1 | grep -c ERROR) -eq 0 ]; then break; else sleep 0.5; fi; \
	done
	$(THRUK) -l
	cd ../../.. && PERL_DL_NONLAZY=1 /usr/bin/env perl "-MExtUtils::Command::MM" "-e" "test_harness(1)" $(shell pwd)/t/*.t

server:
	$(MAKE) clean
	$(MAKE) prepare
	cd ../../.. && THRUK_PERFORMANCE_DEBUG=1 ./script/thruk_server.pl -r

prepare:
	docker-compose up --build --remove-orphans -d
	docker-compose ps
	$(MAKE) extra_prepare

clean:
	docker-compose stop
	docker-compose rm -f
	-docker network prune -f
	$(MAKE) extra_clean

update:
	docker-compose pull

extra_wait_start:

extra_clean:

extra_prepare:

[% UNLESS minimal %]
<table border="0" cellpadding=0 cellspacing=0 class="top_nav">
  <tr>
    <td width="100%" valign="top">[% PROCESS _header_sites.tt %]</td>
    <td class="hidden noprint" id="bug_report">
      [% IF show_error_reports%]
      <a href="#" id="bug_report-btnEl"><img src="[% url_prefix %]themes/[% theme %]/images/bug_error.png" class="top_bug_button noprint" alt="Send Bug Report" title="Send Bug Report" width="16" height="16"></a>
      [% END %]
    </td>
    [% IF 0 %]
    <!--
    <td class="top_nav_pref">
      <input type="button" class="top_nav_pref_button noprint" value="test error" title="test error" onMouseOver="button_over(this)" onMouseOut="button_out(this)" onClick="alert(nonexistant); return false;" style="margin-right: 30px;">
    </td>
    -->
    [% END %]
    <td>
      <input type="image" src="[% url_prefix %]themes/[% theme %]/images/arrow_refresh.png" class="btn-round top_refresh_button noprint" onClick="refresh_button(this)" alt="refresh this page" title="refresh this page">
    </td>
    <td>
      <input type="image" src="[% url_prefix %]themes/[% theme %]/images/settings.png" class="btn-round top_nav_pref_button noprint" title="preferences" onMouseOver="button_over(this)" onMouseOut="button_out(this)" onClick="toggleElementRemote('pref_pane', '_header_prefs', true); return false;">
    </td>
    [% IF show_top_pane %]
    <td>
      <input type="image" onClick="toggleTopPane(); return false;" src="[% url_prefix %]themes/[% theme %]/images/icon_minimize.gif" class="btn-round btn_toggle_top_pane" id="btn_toggle_top_pane" alt="toggle header">
    <!--<a href="#" onClick="toggleTopPane(); return false;"><img src="[% url_prefix %]themes/[% theme %]/images/icon_minimize.gif" class="btn_toggle_top_pane" id="btn_toggle_top_pane" alt="toggle header"></a>-->
    </td>
    [% END %]
    [% IF cookie_auth && show_logout_button %]
    <td class="top_nav_pref">
      <form action="[% url_prefix %]cgi-bin/login.cgi?logout" method='POST' target='_top'>
      <input type="image" src="[% url_prefix %]themes/[% theme %]/images/logout.png" class="btn-round top_nav_pref_button noprint" title="logout" onMouseOver="button_over(this)" onMouseOut="button_out(this)">
      </form>
    </td>
    [% END %]
  </tr>
</table>
[% IF show_top_pane %]
<a href="#" onClick="toggleTopPane(); return false;"><img src="[% url_prefix %]themes/[% theme %]/images/icon_minimize.gif" class="btn_toggle_top_pane" id="btn_toggle_top_pane" alt="toggle header"></a>
[% END %]
[% END %]
